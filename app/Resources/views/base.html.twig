<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
        <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
        <title>{% block title %}Tajfun event WOT EU clans progress app{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}">
            <link rel="stylesheet" href="{{ asset('css/bootstrap-theme.min.css') }}">
            <link rel="stylesheet" href="{{ asset('css/style.css') }}">
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>

    <body id="{% block body_id %}{% endblock %}">

        {% block header %}
            <header>
                <div class="container">
                    <h2>Select clan, EU region only</h2>
                    <form id='searchclantag' method="POST" class="form-inline" role="form" action="/searchclan">
                        <div class="form-group">
                            <label for="clantag">Find clan by tag:</label>
                            <input type="text" class="form-control" name="clantag">
                        </div>

                        <button type="submit" class="btn btn-default">Search</button>
                    </form>
                </div>
            </header>
        {% endblock %}
        <div class="container body-container">
            {% block body %}
            {% endblock %}
        </div>
        {% block footer %}
            <footer>
                <div class="container">
                    <div class="row">
                        <div id="footer-copyright" class="col-md-9">
                            <p>&copy; {{ 'now'|date('Y') }} vonLeeb_pl@PSQD Powered by <a href="https://symfony.com/symfony">Symfony PHP Framework</a></p>
                            <p>MIT License</p>
                        </div>
                        <div id="footer-resources" class="col-md-3">
                            <p>
                                <a href="https://twitter.com/symfony"><i class="fa fa-twitter"></i></a>
                                <a href="https://www.facebook.com/SensioLabs"><i class="fa fa-facebook"></i></a>
                                <a href="http://symfony.com/blog"><i class="fa fa-rss"></i></a>
                            </p>
                        </div>
                    </div>
                </div>
            </footer>
        {% endblock %}
    </body>
</html>
