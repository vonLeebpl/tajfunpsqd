{% extends 'base.html.twig' %}

{% block body_id %}Search clan{% endblock %}

{% block body %}
    <div class="container">
        <h2>{{ clan.tag }} clan members progress in {{ event.eventName }}</h2>

        {% if mdata|length > 0 %}

            <table class="table table-condensed">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Award</th>
                        <th>Rank</th>
                        <th>Fame</th>
                        <th>Fame to award</th>
                        <th>Battles</th>
                        <th>Battles to award</th>
                        <th>Days in clan</th>
                    </tr>
                </thead>
                <tbody>
                    {% for m in mdata %}
                        <tr     {% if m.rank <= 6000 and m.rank > 0 %}
                                    class="success"
                                {% elseif m.rank > 6000 and m.rank <= 8000 %}
                                    class="info"
                                {% elseif m.rank > 8000 %} class="danger"
                                {% else %} class="danger" {% endif %}
                        >
                            <td>{{ m.accountName }}</td>
                            <td>{{ m.awardLevel }}</td>
                            <td>{{ m.rank }}</td>
                            <td>{{ m.famePoints }}</td>
                            <td>{{ m.famePointsToImproveAward }}</td>
                            <td>{{ m.battles }}</td>
                            <td>{{ m.battlesToAward }}</td>
                            <td>{{ m.daysInClan }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% else %}
            <h3>Sorry, no matches!!</h3>
        {% endif %}
    </div>

{% endblock %}